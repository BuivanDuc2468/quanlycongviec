@using ToDoTask.Constants;
@model ToDoTask.Models.Contents.ProjectVm

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Project</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label asp-for="DateLine" class="control-label"></label>
                <input asp-for="DateLine" class="form-control" />
                <span asp-validation-for="DateLine" class="text-danger"></span>
            </div>
            <td class="form-group mt-3">
                <select asp-for="Status" class="form-control" name="Status" id="Status.@Model.Id">
                    @if (Model.Status == (int)Status.Processing)
                    {
                        <option value="@Convert.ToInt32(Status.Processing)" selected>Processing</option>
                        <option value="@Convert.ToInt32(Status.Done)">Complete</option>
                    }
                    @if (Model.Status == (int)Status.Done)
                    {
                        <option value="@Convert.ToInt32(Status.Processing)" >Processing</option>
                        <option value="@Convert.ToInt32(Status.Done)" selected>Complete</option>
                    }
                </select>
            </td>
            <div class="form-group mt-5">
                <input type="submit" asp-route-Id="@Model.Id" value="Update" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
