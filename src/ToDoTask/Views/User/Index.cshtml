@using Microsoft.AspNetCore.Identity;
@using ToDoTask.Constants;
@using ToDoTask.Data.Entities;
@using ToDoTask.Helpers;
@using ToDoTask.Models.Contents;
@model IEnumerable<ToDoTask.Models.Contents.UserRoleView>

@{
    ViewData["Title"] = "Người Dùng";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var pagingModel = new PagingModel()
    {
        currentPage = ViewBag.CurrentPage,
        countPages = ViewBag.CountPage,
        generateUrl = (int? p) => Url.Action("Nguoi-dung", new { page = p })
    };
}

<h1>List User</h1>

<nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">
    <!-- Sidebar Toggle (Topbar) -->
    <button id="sidebarToggleTop" class="btn btn-link d-md-none rounded-circle mr-3">
        <i class="fa fa-bars"></i>
    </button>
    <!-- Topbar Search -->
    <form asp-action="Index" method="get">
        <div class="form-actions no-color">
            <p>
                Find: <input type="text" name="SearchString" value="@ViewData["CurrentFilter"]" />
                <input type="submit" value="Search" class="btn btn-default" />
            </p>
        </div>
    </form>
    <!-- Topbar Navbar -->
</nav>
<!-- End of Topbar -->
<p>
    <a asp-action="Create">Thêm Mới người dùng</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RoleName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RoleName)
                </td>
                <td>
                    <button><a asp-action="Edit" asp-route-id="@item.UserId">Edit</a></button>
                    <button onclick="confirmDelete('@item.UserId')">Delete</button>
                </td>
            </tr>
        }
    </tbody>
</table>
<partial name="_Paging" model="@pagingModel" />
@section Scripts {
<script>
        function confirmDelete(Id){
            if (confirm("Are you sure delete User?") == true){
                $.ajax({
                    url: location.origin + "/User/Delete/?Id=" + Id,
                    type: "get",
                    dataType: 'json',
                    success: function (data) {
                        location.reload();
                    },
                    error: function (e) {
                        console.log(e.message);
                    }
                });
            }
        }
</script>
}