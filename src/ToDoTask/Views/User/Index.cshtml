@using Microsoft.AspNetCore.Identity;
@using ToDoTask.Constants;
@using ToDoTask.Data.Entities;
@using ToDoTask.Models.Contents;
@model IEnumerable<ToDoTask.Models.Contents.UserRoleView>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>List Job</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RoleName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RoleName)
                </td>
                <td>
                    <button><a asp-action="Edit" asp-route-id="@item.UserId">Edit</a></button>
                    <button onclick="confirmDelete('@item.UserId')">Delete</button>
                </td>
            </tr>
        }
    </tbody>
</table>
@section Scripts {
<script>
        function confirmDelete(Id){
            if (confirm("Are you sure delete User?") == true){
                $.ajax({
                    url: location.origin + "/User/Delete/?Id=" + Id,
                    type: "get",
                    dataType: 'json',
                    success: function (data) {
                        location.reload();
                    },
                    error: function (e) {
                        console.log(e.message);
                    }
                });
            }
        }
</script>
}