@using ToDoTask.Models.Contents;
@*@model StatisticPercentForView;*@
@{
    ViewData["Title"] = "Dashboard";
    Layout = "_Layout";
}
<div class="row">
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Dashboard</h1>
</div>

<!-- Content Row -->
<div class="row">
    @if (User.IsInRole("Admin"))
    {
        <!-- Earnings (Monthly) Card Example -->
        <div class="col-xl-4 col-md-4 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                            Total Users
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.TotalUser
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    }
    <!-- Earnings (Monthly) Card Example -->
    <div class="col-xl-4 col-md-4 mb-4">
        <div class="card border-left-success shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                            Total Projects
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.TotalProject</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Earnings (Monthly) Card Example -->
    <div class="col-xl-4 col-md-4 mb-4">
        <div class="card border-left-info shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                            Total Tasks
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.TotalTask</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-2x text-gray-300"></i>
                        </div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <!-- Content Column -->
    <div class="col-lg-6 mb-4">

        <!-- Project Card Example -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Projects</h6>
            </div>
            <div class="card-body">
                <h4 class="small font-weight-bold">
                    Waitting<span class="float-right">@Model.PercentProject.PercentWaitting %</span>
                </h4>
                <div class="progress mb-4">
                    <div class="progress-bar bg-danger" role="progressbar" style="width: @Model.PercentProject.PercentWaitting%"
                         aria-valuenow="@Model.PercentProject.PercentWaitting" aria-valuemin="0" aria-valuemax="100"></div>
                </div>
                <h4 class="small font-weight-bold">
                    InProgress<span class="float-right">@Model.PercentProject.PercentProgress %</span>
                </h4>
                <div class="progress mb-4">
                    <div class="progress-bar bg-warning" role="progressbar" style="width: @Model.PercentProject.PercentProgress%"
                         aria-valuenow="@Model.PercentProject.PercentProgress" aria-valuemin="0" aria-valuemax="100"></div>
                </div>
                <h4 class="small font-weight-bold">
                    Complete<span class="float-right">@Model.PercentProject.PercentDone %</span>
                </h4>
                <div class="progress mb-4">
                    <div class="progress-bar" role="progressbar" style="width: @Model.PercentProject.PercentDone%"
                         aria-valuenow="@Model.PercentProject.PercentDone" aria-valuemin="0" aria-valuemax="100"></div>
                </div>
            </div>
        </div>

        <!-- Color System -->
      
    </div>

    <div class="col-lg-6 mb-4">

        <!-- Project Card Example -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Tasks</h6>
            </div>
            <div class="card-body">
                <h4 class="small font-weight-bold">
                    Waitting<span class="float-right">@Model.PercentJob.PercentWaitting %</span>
                </h4>
                <div class="progress mb-4">
                    <div class="progress-bar bg-danger" role="progressbar" style="width: @Model.PercentJob.PercentWaitting%"
                         aria-valuenow="@Model.PercentJob.PercentWaitting" aria-valuemin="0" aria-valuemax="100"></div>
                </div>
                <h4 class="small font-weight-bold">
                    InProgress<span class="float-right">@Model.PercentJob.PercentProgress %</span>
                </h4>
                <div class="progress mb-4">
                    <div class="progress-bar bg-warning" role="progressbar" style="width: @Model.PercentJob.PercentProgress%"
                         aria-valuenow="@Model.PercentJob.PercentProgress" aria-valuemin="0" aria-valuemax="100"></div>
                </div>
                <h4 class="small font-weight-bold">
                    Complete<span class="float-right">@Model.PercentJob.PercentDone %</span>
                </h4>
                <div class="progress mb-4">
                    <div class="progress-bar" role="progressbar" style="width: @Model.PercentJob.PercentDone%"
                         aria-valuenow="@Model.PercentJob.PercentDone" aria-valuemin="0" aria-valuemax="100"></div>
                </div>
            </div>
        </div>

        <!-- Color System -->

    </div>

</div>
</div>
<!-- Content Row -->
